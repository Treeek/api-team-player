{
  "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "lib": ["es5", "es6", "dom"],
      "target": "es5",
      "noImplicitAny": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "dist",
      "baseUrl": ".",
      "paths": {
          "*": [
              "node_modules/*"
          ]
      },
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true
  },
  "include": [
      "src/**/*", "config"
  ]
}
